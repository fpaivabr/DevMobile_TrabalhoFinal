<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004A6D"
    android:padding="16dp">

    <EditText
        android:id="@+id/edtNomeUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome"
        android:textColor="#000000"
        android:background="#FFFFFF" />

    <EditText
        android:id="@+id/edtSobrenomeUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtNomeUsuario"
        android:layout_marginTop="16dp"
        android:hint="Sobrenome"
        android:textColor="#000000"
        android:background="#FFFFFF" />

    <EditText
        android:id="@+id/edtDescricaoUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtSobrenomeUsuario"
        android:layout_marginTop="16dp"
        android:hint="Descrição"
        android:textColor="#000000"
        android:background="#FFFFFF" />

    <EditText
        android:id="@+id/edtSenhaUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtDescricaoUsuario"
        android:layout_marginTop="16dp"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:background="#FFFFFF" />

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtSenhaUsuario"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Cadastrar"
        android:background="#D1948D"
        android:textColor="#FFFFFF" />
</RelativeLayout>
