<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/txtBemVindo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem vindo(a), xxxxx!"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/txtSelecioneOpcao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione abaixo a opção desejada:"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">

        <Button
            android:id="@+id/btnTodosFeedbacks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Todos Feedbacks"/>

        <Button
            android:id="@+id/btnFeedbacksPendentes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feedbacks Pendentes"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnListaAfazeres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Lista de Afazeres" />

        <Button
            android:id="@+id/btnConfiguracaoCardapio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configuração Cardápio"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtSair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sair"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:textColor="@android:color/holo_red_dark"/>

</RelativeLayout>
