<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FEEDBACKS:"
        android:textSize="18sp"
        android:layout_margin="16dp" />

    <RadioGroup
        android:id="@+id/statusRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp">

        <RadioButton
            android:id="@+id/todosFeedbacksRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Todos" />

        <RadioButton
            android:id="@+id/pendentesFeedbacksRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pendentes" />

        <RadioButton
            android:id="@+id/resolvidosFeedbacksRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resolvidos" />
    </RadioGroup>

    <TextView
        android:id="@+id/txtTituloCardapio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="Título do Cardápio" />

    <ListView
        android:id="@+id/feedbacksListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="1dp" />

    <include
        layout="@layout/barra_navegacao_inferior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
