<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Formulário para adicionar prato -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar Prato"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/edtTituloPrato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Título do Prato"
        android:textColor="#000000"
        android:background="#FFFFFF" />

    <EditText
        android:id="@+id/edtDescricaoPrato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrição do Prato"
        android:textColor="#000000"
        android:background="#FFFFFF" />

    <Spinner
        android:id="@+id/spinnerTipoPrato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:entries="@array/tipos_prato"
        android:textColor="#000000"
        android:background="#FFFFFF" />

    <Button
        android:id="@+id/btnAdicionarPrato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar"
        android:background="#D1948D"
        android:textColor="#FFFFFF" />
</LinearLayout>
