<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtTituloFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Configuração Cardápio"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Formulário para adicionar prato -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar Prato"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/edtTituloPrato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Título do Prato" />

    <EditText
        android:id="@+id/edtDescricaoPrato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrição do Prato" />

    <Spinner
        android:id="@+id/spinnerTipoPrato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:entries="@array/tipos_prato" />

    <Button
        android:id="@+id/btnAdicionarPrato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar" />

    <!-- Campo para filtrar pratos -->
    <EditText
        android:id="@+id/filtrarPratosEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Filtrar pelo título do prato" />

    <!-- ListView para mostrar pratos -->
    <ListView
        android:id="@+id/listaPratos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="1dp" />

    <include
        layout="@layout/barra_navegacao_inferior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
